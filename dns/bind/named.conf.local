include "/etc/bind/geo/GeoIP.acl";

# CDN for SNG
view "russia" {
    match-clients { AM; AZ; BY; GE; KG; KZ; RU; TM; TJ; UA; UZ; };
    recursion yes;

    zone "minicdn.herokuapp.com" {
        type master;
        file "/etc/bind/zones/ru.localhost";
    };
};

# CDN for Others
view "global" {
    match-clients { any; };

    recursion yes;

    zone "minicdn.herokuapp.com" {
        type master;
        file "/etc/bind/zones/ru.localhost";
    };

};

